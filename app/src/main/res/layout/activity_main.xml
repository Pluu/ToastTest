<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#90CAF9"
        android:orientation="vertical"
        android:padding="20dp">

        <CheckBox
            android:id="@+id/checkFullScreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Check Fullscreen"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/checkOfActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Parent of Activity"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnSlideInOfTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Top to Bottom" />

        <Button
            android:id="@+id/btnSlideInOfBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bottom to Top" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="@android:color/black" />

        <EditText
            android:id="@+id/editTest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Edit Text"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black" />
    </LinearLayout>

</FrameLayout>